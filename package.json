{
  "name": "markle",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "oocak",
  "homepage": "https://oocak.com",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck": "tsc --noEmit",
    "dev": "concurrently -k \"npm run backend:dev\" \"electron-vite dev\"",
    "start": "electron-vite preview",
    "build": "npm run typecheck && npm run backend:build && electron-vite build",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "postinstall": "electron-builder install-app-deps && cd backend && npm install",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
